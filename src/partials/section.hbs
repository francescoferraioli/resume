    <div class="section-heading">
        <span class="icon">
            <i class="fa fa-{{ section.icon }}"></i>
        </span>
        <span class="text">{{ uppercase section.name }}</span>
    </div>
    <div class="section-content">
        {{> partial partial=(sectionPartial section.name) }}
    </div>
</div>
